---
interface Props {
    icon: any;
    href?: string | null;
    subtitle?: string;
}

const { icon: Icon, href = null, subtitle } = Astro.props;
const Container = href ? 'a' : 'div';
---

<style>
    .container {
        display: flex;
        align-items: center;
        height: 2rem;
        gap: 0.25rem;
    }

    .icon {
        display: grid;
        place-items: center;
        height: 2rem;
        width: 2rem;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>

<Container {href} rel="noreferrer, noopener" class="container">
    <div class="container">
        <div class="icon">
            <Icon color="var(--primary-color)" size="1.5rem"/>
        </div>
        <div class="content">
            <slot/>
            {subtitle && <span class="small">{subtitle}</span>}
        </div>
    </div>
</Container>
