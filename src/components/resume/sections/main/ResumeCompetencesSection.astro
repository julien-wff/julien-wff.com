---
import ResumeElement from '$components/resume/containers/ResumeElement.astro';
import ResumeBulletLine from '$components/resume/containers/ResumeBulletLine.astro';
import { useTranslations } from '$i18n/utils';
import { resumeTranslations } from '$i18n/translations/resume';
import type { Language } from '$i18n/utils';

const language = Astro.currentLocale as Language;
const t = useTranslations(resumeTranslations, language);
---

<ResumeElement title={t('competences.title')} gap="small">
    <ResumeBulletLine>
        {t('competences.web')}
    </ResumeBulletLine>
    <ResumeBulletLine>
        {t('competences.database')}
    </ResumeBulletLine>
    <ResumeBulletLine>
        {t('competences.data')}
    </ResumeBulletLine>
    <ResumeBulletLine>
        {t('competences.ai')}
    </ResumeBulletLine>
    <ResumeBulletLine>
        {t('competences.devops')}
    </ResumeBulletLine>
    <ResumeBulletLine>
        {t('competences.development')}
    </ResumeBulletLine>
</ResumeElement>
