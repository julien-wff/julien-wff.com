---
import ResumeParagraphLine from '$components/resume/containers/ResumeParagraphLine.astro';
import ResumeElement from '$components/resume/containers/ResumeElement.astro';
import PhonePortrait from 'svelte-ionicons/PhonePortrait.svelte';
import Business from 'svelte-ionicons/Business.svelte';
import People from 'svelte-ionicons/People.svelte';
import FileTrayFull from 'svelte-ionicons/FileTrayFull.svelte';
import MaleFemale from 'svelte-ionicons/MaleFemale.svelte';
import { useTranslations } from '$i18n/utils';
import { resumeTranslations } from '$i18n/translations/resume';
import type { Language } from '$i18n/utils';

const language = Astro.currentLocale as Language;
const t = useTranslations(resumeTranslations, language);
---

<ResumeElement title={t('experience.title')} mb>
    <ResumeParagraphLine title={t('experience.reveals.title')}
                         subtitle={t('experience.reveals.subtitle')}
                         icon={Business}>
        {t('experience.reveals.description')}
    </ResumeParagraphLine>
    <ResumeParagraphLine title={t('experience.henoo.title')}
                         subtitle={t('experience.henoo.subtitle')}
                         icon={PhonePortrait}>
        {t('experience.henoo.description')}
    </ResumeParagraphLine>
    <ResumeParagraphLine title={t('experience.cma.title')}
                         subtitle={t('experience.cma.subtitle')}
                         icon={FileTrayFull}>
        {t('experience.cma.description')}
    </ResumeParagraphLine>
    <ResumeParagraphLine title={t('experience.bde.title')}
                         subtitle={t('experience.bde.subtitle')}
                         icon={People}>
        {t('experience.bde.description')}{' '}<a href="https://bdecesinancy.fr" target="_blank">bdecesinancy.fr</a>.
    </ResumeParagraphLine>
    <ResumeParagraphLine title={t('experience.ailes.title')}
                         subtitle={t('experience.ailes.subtitle')}
                         icon={MaleFemale}>
        {t('experience.ailes.description')}
    </ResumeParagraphLine>
</ResumeElement>
