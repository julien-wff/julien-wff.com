---
import ResumeElement from '$components/resume/containers/ResumeElement.astro';
import ResumeParagraphLine from '$components/resume/containers/ResumeParagraphLine.astro';
import School from 'svelte-ionicons/School.svelte';
import { useTranslations } from '$i18n/utils';
import { resumeTranslations } from '$i18n/translations/resume';
import type { Language } from '$i18n/utils';

const language = Astro.currentLocale as Language;
const t = useTranslations(resumeTranslations, language);
---

<ResumeElement title={t('formation.title')} mb>
    <ResumeParagraphLine title={t('formation.cesi.title')} subtitle={t('formation.cesi.subtitle')} icon={School}>
        {t('formation.cesi.description')}
    </ResumeParagraphLine>
    <ResumeParagraphLine title={t('formation.lcj.title')} subtitle={t('formation.lcj.subtitle')} icon={School}>
        {t('formation.lcj.description')}
    </ResumeParagraphLine>
</ResumeElement>
