---
import ResumeElement from '$components/resume/containers/ResumeElement.astro';
import ResumeIconLine from '$components/resume/containers/ResumeIconLine.astro';
import LanguageIcon from 'svelte-ionicons/Language.svelte';
import { useTranslations } from '$i18n/utils';
import { resumeTranslations } from '$i18n/translations/resume';
import type { Language } from '$i18n/utils';

const language = Astro.currentLocale as Language;
const t = useTranslations(resumeTranslations, language);
---

<ResumeElement title={t('language.title')} gap="small" mb>
    <ResumeIconLine icon={LanguageIcon} subtitle={t('language.french.subtitle')}>
        {t('language.french.title')}
    </ResumeIconLine>
    <ResumeIconLine icon={LanguageIcon} subtitle={t('language.english.subtitle')}>
        {t('language.english.title')}
    </ResumeIconLine>
    <ResumeIconLine icon={LanguageIcon} subtitle={t('language.german.subtitle')}>
        {t('language.german.title')}
    </ResumeIconLine>
</ResumeElement>
