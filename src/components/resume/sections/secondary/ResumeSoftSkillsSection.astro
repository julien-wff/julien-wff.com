---
import ResumeElement from '$components/resume/containers/ResumeElement.astro';
import ResumeIconLine from '$components/resume/containers/ResumeIconLine.astro';
import People from 'svelte-ionicons/People.svelte';
import Mic from 'svelte-ionicons/Mic.svelte';
import Star from 'svelte-ionicons/Star.svelte';
import Barcode from 'svelte-ionicons/Barcode.svelte';
import Cloud from 'svelte-ionicons/Cloud.svelte';
import { useTranslations } from '$i18n/utils';
import { resumeTranslations } from '$i18n/translations/resume';
import type { Language } from '$i18n/utils';

const language = Astro.currentLocale as Language;
const t = useTranslations(resumeTranslations, language);
---

<ResumeElement title={t('skills.title')} gap="small" mb>
    <ResumeIconLine icon={People}>
        {t('skills.teamwork')}
    </ResumeIconLine>
    <ResumeIconLine icon={Mic}>
        {t('skills.oral')}
    </ResumeIconLine>
    <ResumeIconLine icon={Star}>
        {t('skills.proactive')}
    </ResumeIconLine>
    <ResumeIconLine icon={Barcode}>
        {t('skills.rigor')}
    </ResumeIconLine>
    <ResumeIconLine icon={Cloud}>
        {t('skills.autonomy')}
    </ResumeIconLine>
</ResumeElement>
