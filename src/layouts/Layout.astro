---
import { defaultLanguage } from '../i18n/utils';
import '@fontsource/albert-sans/400.css';
import '@fontsource/albert-sans/700.css';
import albert400 from '@fontsource/albert-sans/files/albert-sans-latin-400-normal.woff2';
import albert700 from '@fontsource/albert-sans/files/albert-sans-latin-700-normal.woff2';

interface Props {
	title: string;
	description?: string | null;
}

const { title, description } = Astro.props;
const defaultDescription = 'Site personnel de Julien WOLFF';
---

<!doctype html>
<html lang={Astro.currentLocale || defaultLanguage}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description || defaultDescription} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preload" href={albert400} as="font" type="font/woff2" />
		<link rel="preload" href={albert700} as="font" type="font/woff2" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--gradient-blue: #4DA4F4;
		--gradient-purple: #E926FA;
		--primary-color: #9d65f7;
		--background-color: #f1f1f1;
		--text-color: #002c45;
		--light-gray: #D5DCE3;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Albert Sans', sans-serif;
		color: var(--text-color);
		background-color: var(--background-color);
	}

	::selection {
		background: var(--primary-color);
		color: white;
		-webkit-text-fill-color: initial;
	}

	:focus-visible {
		outline: 1px solid var(--primary-color);
		outline-offset: 0;
	}
</style>
